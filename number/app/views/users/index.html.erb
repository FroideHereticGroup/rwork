<h1>>電話帳</h1>
<%= link_to "新規登録", new_user_url %>

<table border="1">
	<tr>
		<th>電話番号</th><th>名前</th><th>フリガナ</th><th>住所</th><th>誕生日</th><th></th>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.tel %></td>
			<td><%= user.name %></td>
			<td><%= user.phonetic %></td>
			<td><%= user.address %></td>
			<td><%= user.birthday %></td>
			<td>
				<%= link_to "編集", edit_user_url(user) %>
				<%= link_to "削除", user_url(user), :method => 'delete', data: {confirm: "本当に削除しますか？"} %>
			</td>
		</tr>
	<% end %>
</table>