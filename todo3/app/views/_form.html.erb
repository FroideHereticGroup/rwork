<% if @task.errors.any? %>
  <div id="error_explanation">
    <h2><%= @task.errors.count %>件のエラー発生</h2>
    <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for([@user, @task]) do |f| %>
  <div class="field">
    <%= f.label :name, '名前' %>
    <%= f.text_field :name %><br />
  </div>
  <div class="field">
    <%= f.label :deadline, '締め切り日' %>
    <%= f.datetime_select :deadline %><br />
  </div>
  <div>
    <%= f.label :priority, '優先度' %>
    <%= f.select :priority, [0, 1, 2] %><br />
  </div>
    <%= f.submit %>
<% end %>
